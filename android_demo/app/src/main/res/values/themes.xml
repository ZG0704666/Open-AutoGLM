<?xml version="1.0" encoding="utf-8"?>
<!--
    themes.xml - 主题配置文件
    
    定义应用的整体外观风格
    基于 Material Design 3 主题
-->
<resources>
    <!-- 基础主题 - 继承自 Material Design 3 日间主题 -->
    <style name="Theme.AutoGLMPhoneDemo" parent="Theme.Material3.Light.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- 背景色 -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- 导航栏颜色 -->
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>
    
    <!-- 对话气泡样式 - 用户消息 -->
    <style name="ChatBubbleUser">
        <item name="android:background">@drawable/bg_bubble_user</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- 对话气泡样式 - AI 消息 -->
    <style name="ChatBubbleAssistant">
        <item name="android:background">@drawable/bg_bubble_assistant</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
