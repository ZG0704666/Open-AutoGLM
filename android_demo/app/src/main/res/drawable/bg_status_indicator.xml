<?xml version="1.0" encoding="utf-8"?>
<!--
    bg_status_indicator.xml - 连接状态指示器背景
    
    小圆点指示器，通过代码动态改变颜色
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
